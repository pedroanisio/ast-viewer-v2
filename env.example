# AST Viewer Code Intelligence Platform - Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production
VERSION=2.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Master password for all services (CHANGE IN PRODUCTION!)
MASTER_PASSWORD=codeint2024secure

# Neo4j Graph Database (Primary)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=codeint2024secure
NEO4J_HOST=neo4j
NEO4J_PORT=7687

# Redis Cache
REDIS_URL=redis://:codeint2024secure@redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=codeint2024secure

# PostgreSQL (Optional - for metadata)
POSTGRES_ENABLED=true
POSTGRES_DB=ast_viewer_metadata
POSTGRES_USER=ast_viewer
POSTGRES_PASSWORD=codeint2024secure
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=your-replication-password

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10MB
MAX_PROJECT_SIZE=1GB
ENABLE_TREE_SITTER=true
ENABLE_VISUALIZATION=true
CACHE_TTL=3600
MAX_SYMBOLS_PER_REQUEST=10000
ENABLE_PARALLEL_ANALYSIS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENABLE_HTTPS_ONLY=false
ENABLE_HSTS=false
ENABLE_CSP=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
ENABLE_METRICS=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@astviewer.com

# Slack (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR=/app/uploads
EXPORT_DIR=/app/exports
TEMP_DIR=/app/temp
MAX_UPLOAD_SIZE=100MB

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=ast-viewer-storage

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# =============================================================================
# SSL/TLS CERTIFICATES
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/astviewer.crt
SSL_KEY_PATH=/etc/ssl/private/astviewer.key

# Let's Encrypt
LETSENCRYPT_EMAIL=admin@astviewer.com
LETSENCRYPT_DOMAINS=astviewer.com,api.astviewer.com
